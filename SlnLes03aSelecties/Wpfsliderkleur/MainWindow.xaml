<Window x:Class="Wpfsliderkleur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfsliderkleur"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="SliderKleur" HorizontalAlignment="Left" Margin="24,45,0,0" VerticalAlignment="Top" Width="400" Minimum="0" Maximum="100" ValueChanged="SliderKleur_ValueChanged"/>
        <Label x:Name="LabelKleur" Content="" HorizontalAlignment="Left" Margin="283,125,0,0" VerticalAlignment="Top" Width="141" Height="42" Background="White" BorderBrush="Black" BorderThickness="1"/>
        <TextBlock x:Name="geselecteerdewaarde" HorizontalAlignment="Left" Margin="55,146,0,0" TextWrapping="Wrap" Text="Geselecteerde waarde" VerticalAlignment="Top"/>
    </Grid>
</Window>
