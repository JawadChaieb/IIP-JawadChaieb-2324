<Window x:Class="Wpfbmi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfbmi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Content="Lengte:" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,10,0" />
            <TextBox x:Name="LengteTextBox" Grid.Row="0" Margin="10,0,0,0" Text="lengte in cm" />

            <Label Content="Gewicht:" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,10,0" />
            <TextBox x:Name="GewichtTextBox" Grid.Row="1" Margin="10,0,0,0" Text="gewicht in kg" />

            <Button x:Name="BerekenButton" Content="BEREKENEN" Grid.Row="2" Margin="10,0,0,0" Click="BerekenButton_Click" />

            <Label Content="BMI:" Grid.Row="3" HorizontalAlignment="Right" Margin="0,0,10,0" />
            <Label x:Name="BmiLabel" Grid.Row="3" Margin="10,0,0,0" />
        </Grid>
    </Grid>
</Window>
